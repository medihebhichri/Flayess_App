<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="utils.controllers.CategoryAddController">

    <!-- Header Label -->
    <Label text="Category Information" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- Category Name Field -->
    <HBox spacing="10">
        <Label text="Category Name:" style="-fx-font-size: 16px;" />
        <TextField fx:id="categoryNameField" style="-fx-pref-width: 240px;" />
    </HBox>

    <!-- Subfield Field -->
    <HBox spacing="10">
        <Label text="Subfield:" style="-fx-font-size: 16px;" />
        <TextField fx:id="subfieldField" style="-fx-pref-width: 240px;" />
    </HBox>

    <!-- Type of Funding Field -->
    <HBox spacing="10">
        <Label text="Type of Funding:" style="-fx-font-size: 16px;" />
        <TextField fx:id="typeOfFundingField" style="-fx-pref-width: 240px;" />
    </HBox>

    <!-- Profitability Index Field -->
    <HBox spacing="10">
        <Label text="Profitability Index:" style="-fx-font-size: 16px;" />
        <TextField fx:id="profitabilityIndexField" style="-fx-pref-width: 240px;" />
    </HBox>

    <!-- Save Category Button -->
    <Button fx:id="saveCategoryButton" text="Save Category" onAction="#saveCategoryButtonClicked" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-pref-width: 240px;" />

    <!-- Add Project to Category HBox -->
    <HBox spacing="10">
        <Label text="Add Project to Category:" style="-fx-font-size: 16px;" />
        <ComboBox fx:id="projectCategoryComboBox" style="-fx-pref-width: 160px;" />
        <Button text="Add Project" onAction="#addProjectToCategory" style="-fx-font-size: 16px; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-pref-width: 80px;" />
    </HBox>
</VBox>

